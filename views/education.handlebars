<div
  class="relative h-screen bg-cover bg-center"
  style="background-image: url('/assets/cloudBg.png')"
>
  <!-- Overlay -->
  <div
    class="absolute inset-0 bg-blue-900 bg-opacity-50 flex justify-center items-center"
  >
    <!-- Centered Container -->
    <div
      class="container mx-auto px-6 py-12 flex flex-col justify-center items-center text-white"
    >
      <!-- Left Content -->
      <div class="text-center px-6">
        <h1 class="text-5xl font-extrabold mb-4">Experience</h1>
        <p class="text-lg mb-6 leading-relaxed">
          Here’s a look at my professional journey and the roles I’ve undertaken
          so far.
        </p>
        <!-- Scroll Button -->
        <a
          href="#experience"
          class="px-6 py-3 bg-white text-blue-900 font-medium rounded-lg shadow-md hover:bg-gray-200 transition-transform transform hover:scale-110 duration-300 ease-in-out"
        >
          Check out my Education
        </a>
      </div>
    </div>
  </div>
</div>

<!-- Experience Section -->
<div id="experience" class="w-full bg-white py-20 text-blue-900">
  <div class="w-3/4 mx-auto">
    <!-- Heading and Button Row -->
    <div class="flex justify-between items-center mb-8">
      <h2 class="text-4xl font-bold">Education</h2>
    </div>

    <!-- Experience Cards -->
    <div class="flex flex-col space-y-12">
      <div id="main">
        <div>
          <div class="card-container-p space-y-6">
            <!-- Added space-y-6 for spacing -->
            {{#if dbError}}
              <div>
                Problem with the database<br />
                {{theError}}
              </div>
            {{else}}
              {{#each education}}
                <div
                  class="bg-blue-50 shadow-lg rounded-lg p-6 text-blue-900 hover:shadow-xl transition flex flex-col py-4"
                >
                  <div class="flex-grow">
                    <span
                      class="text-2xl font-bold mb-2 block"
                    >{{school}}</span>
                    <p class="text-gray-600 mt-2">{{date}}</p>
                    <p class="text-gray-600 mt-2">{{degree}}</p>
                    <p class="text-gray-600 mt-2">{{degreeDescription}}</p>
                  </div>
                </div>
              {{/each}}
            {{/if}}
          </div>
        </div>
      </div>
    </div>

  </div>
</div>