<div
  class="relative h-screen bg-cover bg-center"
  style="background-image: url('/assets/cloudBg.png')"
>
  <!-- Overlay -->
  <div
    class="absolute inset-0 bg-blue-900 bg-opacity-50 flex justify-center items-center"
  >
    <!-- Centered Container -->
    <div
      class="container mx-auto px-6 py-12 flex flex-col justify-center items-center text-white"
    >
      <!-- Left Content -->
      <div class="text-center px-6">
        <h1 class="text-5xl font-extrabold mb-4">Projects</h1>
        <p class="text-lg mb-6 leading-relaxed">
          Discover the projects Iâ€™ve been working on to bring ideas to life.
        </p>
        <!-- Scroll Button -->
        <a
          href="#projects"
          class="px-6 py-3 bg-white text-blue-900 font-medium rounded-lg shadow-md hover:bg-gray-200 transition-transform transform hover:scale-110 duration-300 ease-in-out"
        >
          View My Projects
        </a>
      </div>
    </div>
  </div>
</div>

<section id="projects" class="py-16 bg-white">
  <div class="container mx-auto px-6 lg:px-20">
    {{#if dbError}}
    <div class="text-red-600 text-center mb-6">
      <p>Problem with the database</p>
      <p>{{theError}}</p>
    </div>
    {{else}}
     <!-- Heading and Button Row -->
    <div class="flex justify-between items-center mb-8">
      <h2 class="text-4xl font-bold">Career Highlights</h2>
      <!-- Create Experience Button -->
      {{#if isAdmin}}
        <a href="/projects/new">
          <button
            class="px-6 py-3 bg-blue-900 text-white font-medium rounded-lg shadow-md hover:bg-blue-800 transition-transform transform hover:scale-110 duration-300 ease-in-out"
          >
            Add Career Detail
          </button>
        </a>
      {{/if}}
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {{#each projects}}
      <div class="bg-blue-50 shadow-lg rounded-lg p-6 text-blue-900 hover:shadow-xl transition flex flex-col">
        <div class="flex-grow">
          <h4 class="text-2xl font-bold mb-2">{{projectTitle}}</h4>
          <p class="text-gray-600">Year: {{projectYear}}</p>
        </div>
        <div class="mt-4 flex justify-between items-center">
          <a href="/projects-more/{{projectID}}">
            <button class="bg-blue-900 text-white px-4 py-2 rounded-lg shadow-md transition-transform transform hover:scale-110 duration-300 ease-in-out">
              Learn More
            </button>
          </a>
          {{#if ../isAdmin}}
          <div class="space-x-4">
            <a href="/projects/modify/{{projectID}}">
              <button class="bg-gray-400 text-white px-4 py-2 rounded-lg shadow-md hover:bg-green-500 transition">
                Edit
              </button>
            </a>
            <a href="/projects/delete/{{projectID}}">
              <button class="bg-gray-400 text-white px-4 py-2 rounded-lg shadow-md hover:bg-red-500 transition">
                Delete
              </button>
            </a>
          </div>
          {{/if}}
        </div>
      </div>
      {{/each}}
    </div>
    {{/if}}
  </div>
</section>
