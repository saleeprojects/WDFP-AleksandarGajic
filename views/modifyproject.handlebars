<div
  class="relative h-screen bg-cover bg-center"
  style="background-image: url('/assets/cloudBg.png')"
>
  <!-- Overlay -->
  <div
    class="absolute inset-0 bg-blue-900 bg-opacity-50 flex justify-center items-center"
  >
    <!-- Centered Container -->
    <div
      class="container mx-auto px-6 py-12 flex flex-col justify-center items-center text-white"
    >
      <!-- Left Content -->
      <div class="text-center px-6">
        <h1 class="text-5xl font-extrabold mb-4">Modify Project</h1>
        {{#if isLoggedIn}}
          {{#if isAdmin}}
            <form
              action="/projects/modify/{{projectID}}"
              method="post"
              class="bg-white bg-opacity-80 p-6 rounded-lg shadow-md"
            >
              <fieldset class="mb-4">
                <label
                  for="projectTitle"
                  class="block text-blue-900 font-medium mb-2"
                >Project Title:</label>
                <input
                  type="text"
                  class="input-box border text-blue-950 rounded-lg p-2 w-full"
                  name="projectTitle"
                  id="projectTitle"
                  required="required"
                />
              </fieldset>
              <fieldset class="mb-4">
                <label
                  for="projectDescription"
                  class="block text-blue-900 font-medium mb-2"
                >Project Description:</label>
                <input
                  type="text"
                  class="input-box text-blue-950 border rounded-lg p-2 w-full"
                  name="projectDescription"
                  id="projectDescription"
                  required="required"
                />
              </fieldset>
              <fieldset class="mb-4">
                <label
                  for="year"
                  class="block text-blue-900 font-medium mb-2"
                >Project Year:</label>
                <input
                  type="text"
                  class="input-box border text-blue-950 rounded-lg p-2 w-full"
                  name="year"
                  id="year"
                />
              </fieldset>
              <button
                type="submit"
                name="modifyp"
                value="{{projectID}}"
                class="bg-blue-900 text-white px-4 py-2 rounded-lg shadow-md hover:bg-blue-800 transition"
              >
                Update
              </button>
            </form>
          {{else}}
            <p class="text-red-600">Sorry, must be an admin to modify project!</p>
          {{/if}}
        {{else}}
          <p class="text-red-600">
            Must be logged in to add new project!
            <br />
            Go to
            <a href="/login" class="text-blue-500 underline">Log In</a>
          </p>
        {{/if}}
      </div>
    </div>
  </div>
</div>