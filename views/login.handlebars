<div
  class="min-h-screen flex items-center justify-center bg-cover bg-center relative"
  style="background-image: url('/assets/cloudBg.png');"
>
  <!-- Background Overlay -->
  <div class="absolute inset-0 bg-blue-900 bg-opacity-50"></div>

  <!-- Login Card -->
  <div
    class="relative w-full max-w-md bg-white rounded-lg shadow-lg p-6 bg-opacity-50"
  >
    <h2 class="text-2xl font-bold text-blue-900 mb-4 text-center">Login</h2>
    <form action="/login" method="POST">
      <!-- Username Field -->
      <div class="mb-4">
        <label
          for="user"
          class="block text-blue-900 font-medium"
        >Username</label>
        <input
          type="text"
          class="input-box w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
          name="user"
          id="user"
          required="required"
        />
      </div>
      <!-- Password Field -->
      <div class="mb-4">
        <label
          for="user"
          class="block text-blue-900 font-medium"
        >Password</label>
        <input
          type="password"
          class="input-box w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
          name="pw"
          id="pw"
          required="required"
        />
      </div>
      <!-- Submit Button -->
      <button
        type="submit"
        class="w-full px-4 py-2 bg-blue-900 text-white rounded-lg hover:bg-blue-600"
      >
        Log In
      </button>
    </form>
  </div>
</div>