<!-- Main Section -->
<div
  class="relative h-screen bg-cover bg-center"
  style="background-image: url('/assets/cloudBg.png')"
>
  <!-- Overlay -->
  <div
    class="absolute inset-0 bg-blue-900 bg-opacity-50 flex justify-center items-center"
  >
    <!-- Centered Container -->
    <div
      class="container mx-auto px-6 py-12 flex flex-col justify-center items-center text-white"
    >
      <h1 class="text-5xl font-extrabold mb-4">New Project</h1>
      <div>
        {{#if isLoggedIn}}
          {{#if isAdmin}}
            <form
              id="newProjectForm"
              action="/projects/new"
              method="post"
              class="bg-white bg-opacity-80 p-6 rounded-lg shadow-md"
              onsubmit="return showConfirmationPopup(event);"
            >
              <fieldset class="mb-4">
                <label
                  for="projectTitle"
                  class="block text-blue-900 font-medium"
                >Project Title:</label>
                <input
                  type="text"
                  class="input-box border rounded-lg p-2 w-full text-blue-950"
                  name="projectTitle"
                  id="projectTitle"
                  required="required"
                />
              </fieldset>
              <fieldset class="mb-4">
                <label
                  for="projectDescription"
                  class="block text-blue-900 font-medium"
                >Project Description:</label>
                <input
                  type="text"
                  class="input-box border rounded-lg p-2 w-full text-blue-950"
                  name="projectDescription"
                  id="projectDescription"
                  required="required"
                />
              </fieldset>
              <fieldset class="mb-4">
                <label
                  for="year"
                  class="block text-blue-900 font-medium"
                >Project Year:</label>
                <input
                  type="text"
                  class="input-box border rounded-lg p-2 w-full text-blue-950"
                  name="year"
                  id="year"
                  required="required"
                />
              </fieldset>
              <button
                type="submit"
                class="new-project-btn bg-blue-900 text-white px-4 py-2 rounded-lg shadow-md hover:bg-blue-800 transition"
              >Add Project</button>
            </form>
          {{else}}
            <p>Must be an admin to add a new project!</p>
          {{/if}}
        {{else}}
          <p>
            Must be logged in to add a new project!
            <br />
            Go to
            <a href="/login" class="text-blue-500 underline">Log In</a>
          </p>
        {{/if}}
      </div>
    </div>
  </div>
</div>